{
  "private": false,
  "nps": 500000,
  "source": "https://github.com/tbreese3/Helios",

  "build": {
    "path": "scripts/build_helios.sh",
    "compilers": ["g++"],
    "cpuflags": [],
    "systems": ["Linux"]
  },

  "exec": "./Helios",
  "bench": "bench",
  "protocol": "uci",

  "test_presets": {
    /* default values every new-test form will start with */
    "default": {
      "dev_branch":  "main",
      "base_branch": "main",

      "both_bench":  500000,                 /* <-- prevents the “Unable to parse a Bench” error */

      "book_name":        "UHO_Lichess_4852_v1.epd",
      "test_bounds":      "[0.00, 2.00]",   /* <-- needs to be a quoted list */
      "test_confidence":  "[0.05, 0.05]",
      "win_adj":          "movecount=3 score=400",
      "draw_adj":         "movenumber=40 movecount=8 score=40",

      "both_options":      "Threads=3 Hash=512",
      "both_time_control": "6.0+0.06",
      "workload_size":     64
    },

    /* your 58 000-game fixed-length test, one click */
    "GAMES 58k": {
      "dev_branch":  "main",
      "base_branch": "main",
      "both_bench":  500000,

      "both_options":      "Threads=3 Hash=512",
      "both_time_control": "6.0+0.06",
      "workload_size":     64,

      "test_max_games": 58000                /* fixed-length → Test-Type will be “GAMES” */
    }
  },

  "tune_presets": {
    "default": {
      "book_name": "UHO_Lichess_4852_v1.epd"
    }
  },

  "datagen_presets": {}
}
